<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<GridPane fx:controller="tutorial.second.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="top_center" hgap="10" vgap="10"
          gridLinesVisible="true">
    <!-- Adding a padding to make a space between the top and the first row -->
    <padding>
        <Insets top="10"/>
    </padding>

    <!-- As we are ordering the button in the grid pane we don't have to have the code in order -->
    <Button text="Button One" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.halignment="RIGHT"/>
    <Button text="Button Two" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
    <Button text="Button Three" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <Button text="Really Long Button Four"
            GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
    <!-- GridPane.columnSpan is used to make the child "multi-column" (like merging columns) -->
    <!-- GridPane.halignment is used to align the children in the row -->
    <Button text="Button Five" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
</GridPane>