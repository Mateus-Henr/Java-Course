<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>

<?import javafx.scene.layout.GridPane?>
<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="tutorial.HelloController" alignment="CENTER">
    <!-- Instead of assigning an Event Handler in the FXML file, we can assign it in the "initialize()" method in the
    Controller class using the control's id. -->
    <Button fx:id="clickMeButton" text="Click Me!" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
</GridPane>
